---
import Background from '@ui/Background.astro';
import fonts from '../styles/fonts.css';
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <!-- FONTS -->
    <link
      rel='stylesheet'
      href={fonts}
      media='print'
    />
    <!-- FONTS PRELOAD -->
    <link
      rel='preload'
      href='/fonts/DeathMohawk_PERSONAL_USE_ONLY.woff2'
      as='font'
      type='font/woff2'
      crossorigin='anonymous'
    />
    <link
      rel='preload'
      href='/fonts/OldeEnglish.woff2'
      as='font'
      type='font/woff2'
      crossorigin='anonymous'
    />
    <link
      rel='preload'
      href='/fonts/Author-Variable.woff2'
      as='font'
      type='font/woff2'
      crossorigin='anonymous'
    />
    <link
      rel='preload'
      href='/fonts/ClashDisplay-Variable.woff2'
      as='font'
      type='font/woff2'
      crossorigin='anonymous'
    />

    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>ROT N' ROLL</title>
  </head>
  <body>
    <slot />
    <Background />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    position: relative;
    scroll-behavior: smooth;
    scrollbar-color: #a1a1aa transparent;
    scrollbar-width: thin;
  }
</style>
