---
import { Image } from 'astro:assets';
import Logo from 'src/ui/Logo.astro';
const { name, image } = Astro.props;
---

<div
  class='flex flex-col flex-grow items-center justify-between h-full bg-green-300'
>
  <h3
    class='bg-red-500 flex-grow w-full flex justify-center items-center overflow-hidden relative'
  >
    <Logo size='160' />
  </h3>
  <picture class='bg-sky-400 flex justify-center items-center'>
    <Image
      src={image}
      alt={`Image of ${name}`}
      class='h-auto w-[95%] object-cover'
    />
  </picture>
</div>
