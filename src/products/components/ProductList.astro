---
import { PRODUCTS_DATA } from '../data/products-data';
import SingleProduct from './SingleProduct.astro';
---

<div
  class='w-full bg-stone-300 flex-grow grid grid-cols-[repeat(auto-fill,minmax(300px,1fr))] gap-10'
>
  {PRODUCTS_DATA.map((product) => <SingleProduct product={product} />)}
</div>
