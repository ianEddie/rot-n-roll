{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@hero/*": [
        "src/hero/*"
      ],
      "@products/*": [
        "src/products/*"
      ],
      "@ui/*": [
        "src/ui/*"
      ]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}